{
  "version": "2.4.0",
  "title": "Serilog Exceptions",
  "description": "Log exception details and custom properties that are not output in Exception.ToString().",
  "authors": [ "Muhammad Rehan Saeed (RehanSaeed.com)" ],

  "packOptions": {
    "owners": [ "Muhammad Rehan Saeed (RehanSaeed.com)" ],
    "copyright": "@ Muhammad Rehan Saeed. All rights Reserved",
    "tags": [ "Serilog", "Exception", "Log", "Logging", "Detail", "Details" ],
    "iconUrl": "https://raw.githubusercontent.com/RehanSaeed/Serilog.Exceptions/master/Images/Serilog%20Community%20256x256.png",
    "projectUrl": "https://github.com/RehanSaeed/Serilog.Exceptions",
    "licenseUrl": "https://github.com/RehanSaeed/Serilog.Exceptions/blob/master/LICENSE",
    "repository": {
      "type": "git",
      "url": "https://github.com/RehanSaeed/Serilog.Exceptions.git"
    },
    "releaseNotes": "Updated to target Serilog 2.4.0.",
    "requireLicenseAcceptance": true
  },

  "buildOptions": {
    "additionalArguments": [ "/ruleset:../../MinimumRecommendedRulesWithStyleCop.ruleset" ],
    "keyFile": "../../Key.snk",
    "warningsAsErrors": true
  },

  "dependencies": {
    "Serilog": "2.4.0",
    "StyleCop.Analyzers": {
      "version": "1.0.0",
      "type": "build"
    }
  },

  "frameworks": {
    "net4.5": {
      "frameworkAssemblies": {
        "System": "",
        "System.Core": "",
        "System.Data": ""
      }
    },
    "netstandard1.3": {
      "dependencies": {
        "NETStandard.Library": "1.6.0",
        "System.Data.SqlClient": "4.3.0",
        "System.Reflection.TypeExtensions": "4.3.0"
      }
    },
    "netstandard1.6": {
      "dependencies": {
        "NETStandard.Library": "1.6.0",
        "System.Data.SqlClient": "4.3.0",
        "System.Reflection.TypeExtensions": "4.3.0"
      }
    }
  }
}
